extends ./layout/default.pug

block content
  include ./components/header/header.pug
    block links
      include ./components/header/mixin__list-link
      if date.headerLinks.length > 0
        each item in date.headerLinks
          +list-link(item.linkUrl, date.utm, item.linkText)
      else 
        span
  include ./components/space/space.pug
  include ./components/banner/banner.pug 
    block banner 
      include ./components/banner/mixin__banner.pug 
      +banner(date.promoUrl, date.utm, date.bannerImg, date.promoDesc)
  include ./components/body/body.pug 
    block body 
      include ./components/text/mixin__text.pug      
      +text-block(date.textDate)
      include ./components/article/mixin__cards-row.pug
      if date.cards.length > 0
        each cards in date.cards
          +cards-row(cards)
      else 
        span
      include ./components/button/button.pug 
        block button
          include ./components/button/mixin__button.pug
          +button(promoUrl)
  include ./components/space/space.pug
  include ./components/benefit/mixin__benefit.pug
  +benefit(date.benefit)
  include ./components/space/space.pug
      